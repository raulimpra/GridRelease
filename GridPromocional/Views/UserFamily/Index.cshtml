@page
<div class="row" style="padding-top:10px">
    <div class="col-md-5">
        <div class="row">
            <div class="col-md-12">
                <label class="control-label">Perfiles:</label>
                <select class="form-control" id="ddlPerfiles">
                    <option value="">-- Seleccione un Perfil --</option>
                    @{
                        var roles = ViewBag.Roles;
                        if (roles != null)
                        {
                            foreach (var rol in roles.Items)
                            {
                                <option value="@rol.Id">@rol.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-12">
                <label class="control-label">Familias:</label>
                <select class="form-control" id="ddlFamilias">
                    <option value="">-- Seleccione una Familia --</option>
                    @{
                        var familias = ViewBag.Families;
                        if (familias != null)
                        {
                            foreach (var familia in familias.Items)
                            {
                                <option value="@familia.IdFam">@familia.Family</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-12">
                <input class="btn btn-secondary" type="submit" value="Filtrar por Familia y/o Perfil" onclick="FilterData()">
            </div>
        </div>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-5">
        <div class="row">
            <div class="col-md-12">
                <label class="control-label">Perfiles:</label>
                <select class="form-control" id="ddlAsignarPerfil">
                    <option value="">-- Seleccione un Perfil --</option>
                    @{
                        roles = ViewBag.Roles;
                        if (roles != null)
                        {
                            foreach (var rol in roles.Items)
                            {
                                <option value="@rol.Id">@rol.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-12">
                <input class="btn btn-primary" type="submit" value="Asignar Perfil" onclick="SetRole()">
            </div>
        </div>
    </div>
</div>
<br />
<br />
<table id="TableUsuarios" class="display" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>CDGEMP</th>
            <th>COLEMP</th>
            <th>NMBEMP</th>
            <th>Perfil</th>
            <th>Familias Asignadas</th>
            <th style="width:15%"></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div id="AdminPopUp" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btnGuardar" type="button" class="btn btn-primary" onclick="Suf()">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="FilterData()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/JsViews/UserFamily.js" asp-append-version="true"></script>
    <script>
        Users('@ViewBag.LowRole');
    </script>
}


